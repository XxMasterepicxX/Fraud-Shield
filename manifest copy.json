{
  "manifest_version": 3,
  "name": "Fraud Detector",
  "version": "1.0.0",
  "description": "Local AI-powered fraud detection for Gmail",
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "*://mail.google.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://mail.google.com/*"],
      "js": ["src/content/fraud-banner.js"],
      "css": ["src/content/fraud-banner.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "src/assets/icons/icon16.png",
    "32": "src/assets/icons/icon32.png",
    "48": "src/assets/icons/icon48.png",
    "128": "src/assets/icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "src/assets/icons/*.png"
      ],
      "matches": ["*://mail.google.com/*"]
    }
  ]
}
